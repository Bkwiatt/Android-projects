<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IRLFragment"
    android:background="#545353">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/angry_btn"

            android:layout_width="364dp"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonshape"
            android:gravity="center_vertical|center_horizontal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Flip a water bottle and have it land on its cap\n(1 Attempt)"
            android:textColor="#3763DB"
            android:textSize="12sp" />

        <Button
            android:id="@+id/angry_btn2"

            android:layout_width="364dp"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/buttonshape"
            android:gravity="center_vertical|center_horizontal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button"
            android:textColor="#3763DB"
            android:textSize="12sp" />



        <Button
            android:id="@+id/angry_btn3"

            android:layout_width="364dp"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:background="@drawable/buttonshape"
            android:gravity="center_vertical|center_horizontal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button"
            android:textColor="#3763DB"
            android:textSize="12sp" />


        <Button
        android:id="@+id/angry_btn4"

        android:layout_width="364dp"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:background="@drawable/buttonshape"
        android:gravity="center_vertical|center_horizontal"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Button"
        android:textColor="#3763DB"
        android:textSize="12sp" />

        <ImageView
            android:id="@+id/camCap"
            android:layout_width="303dp"
            android:layout_height="255dp"
            android:layout_centerInParent="true"
            android:src="@drawable/buttonshape" />
    </RelativeLayout>

</ScrollView>